local function npm_usage()
    print(
        [[
nplc package cmdname [args] [options]
描述:
    NPL包管理器命令

命令:
init     包初始化 生成配置文件
install  安装包
remove   删除包
compile  编译包配置 生成具体版本包依赖配置文件
package  生成安装包并上传至包服务器

	]]
    )
end

-- 入口函数
return function(ctx)
    local args = ctx.arg

    local package_args = {}
    local cmd_name = args[1]
    --g_log(ctx)
    if cmd_name == "install" then
        -- npm install 安装包
        npm_install(ctx)
    elseif cmd_name == "init" then
        -- npm init 构建项目package文件
        npm_init(ctx)
    elseif cmd_name == "list" then
        -- npm list 列出已安装
        npm_list(ctx)
    elseif cmd_name == "remove" then
        -- npm remove 移除包
        npm_remove(ctx)
    elseif cmd_name == "compile" then
        --  npm compile 编译包配置
        npm_compile(ctx)
    elseif cmd_name == "loader" then
        -- npm loader 加载包配置
        npm_loader(ctx)
    elseif cmd_name == "package" then
        npm_package(ctx)
    else
        npm_usage()
    end
end
