-- 列出已安装的包
local function npm_list(ctx)
    local ctx_args = ctx.arg or {}
    local help = get_option_value(ctx_args, "-h") or get_option_value(ctx_args, "--help")
    local _local = get_option_value(ctx_args, "-l") or get_option_value(ctx_args, "--local")
    if help then
        npm_list_usage()
        return
    end

    local path = ctx.path
    local package_config_filename = ctx.path .. "/package.lock"

    if _local then
        if not g_file:is_exist(package_config_filename) then
            --g_log.info("package.lock配置文件不存在")
            package_config_filename = ctx.path .. "/package.npl"
            if not g_file:is_exist(package_config_filename) then
                g_log.info("package.npl配置文件不存在")
                return
            end
        end
        local package_config = commonlib.LoadTableFromFile(package_config_filename)
        print("依赖包列表:")
        for k, x in pairs(package_config.dependencies or {}) do
            if type(x) == "table" then
                print("包名:" .. k .. " 版本:" .. (x.version or "unknow"))
            else
                print("包名:" .. k .. " 版本:" .. x)
            end
        end

        return
    end

    local package_list = g_packages:get_all()
    print("已安装的包列表:")
    for _, x in ipairs(package_list or {}) do
        print("包名:" .. x.name .. " 版本:" .. x.version)
    end
end

-- 初始化加载包函数
local function npm_init_load_package()
    -- 包装加载包函数
    local _load_package = NPL.load_package
    NPL.load_package = function(name, version)
        local package = g_packages:get({name = name, version = version})
        local package_name = name
        if package then
            package_name = package.install_dir
        end

        --g_log.info("加载包:" .. package_name)
        if type(_load_package) == "function" then
            _load_package(package_name)
        else
            NPL.load(package_name)
        end

        return
    end
end

-- 加载应用程序依赖包
local function npm_loader(ctx)
    -- 初始化加载包
    npm_init_load_package()

    local path = ctx.path
    local package_config_filename = ctx.path .. "/package.lock"

    if not g_file:is_exist(package_config_filename) then
        --g_log.info("package.lock配置文件不存在")
        package_config_filename = ctx.path .. "/package.npl"
        if not g_file:is_exist(package_config_filename) then
            --g_log.info("package.npl配置文件不存在")
            return
        end
    end

	local packages = npm:get_package_list_by_filename(package_config_filename)
	NPL.PackageManager.init(packages)
    for _, x in ipairs(packages) do
		npm:load_package(x)
    end
end

