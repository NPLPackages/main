function testNPLCAD()
	local code = [[
	def("playwithSphere", p1){
		push()
		+{emit()}
		sphere(+{=p1})
		pop()
	}


	playwithSphere(3){
		translate(2,3,4)
		color('blue')
	}
	]]

	pcall(NPL.loadstring(code, "code"))
end